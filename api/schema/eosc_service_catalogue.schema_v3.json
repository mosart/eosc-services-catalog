      "type": "string",
      "minLength": 1
    },
    "URI": {
      "type": "string",
      "minLength": 1,
      "format": "uri"
    },
    "Email": {
      "type": "string",
      "minLength": 3,
      "format": "email"
    },
    "LanguageCode": {
      "type": "string",
      "pattern": "^[A-Z]{2}$"
    },
    "AccessMode": {
      "type": "string",
      "pattern": "^\\s*(?:access_mode\\-free|access_mode\\-free_conditionally|access_mode\\-other|access_mode\\-paid|access_mode\\-peer_reviewed)\\s*$"
    },
    "TargetUser": {
      "type": "string",
      "pattern": "^\\s*(?:target_user\\-businesses|target_user\\-funders|target_user\\-innovators|target_user\\-other|target_user\\-policy_makers|target_user\\-providers|target_user\\-publishers|target_user\\-research_communities|target_user\\-research_groups|target_user\\-research_infrastructure_managers|target_user\\-research_managers|target_user\\-research_networks|target_user\\-research_organisations|target_user\\-research_projects|target_user\\-researchers|target_user\\-resource_managers|target_user\\-resource_provider_managers|target_user\\-students)\\s*$"
